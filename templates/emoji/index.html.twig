{% extends 'base.html.twig' %}
{% block title %}Emojis{% endblock %}

{% block body %}
    {% for category in categories %}
        <div class="row">
            <h1>{{ category.name }}</h1>
        </div>
        <div class="row pb-5">
            {% for emoji in category.emojis %}
                <div class="col">
                    <a
                        href="{{ path('emojis.show', {emoji: emoji.id}) }}"
                        title="{{ emoji.name }}"
                        class="display-3 text-decoration-none"
                    >
                        {{ emoji.html | raw }}
                    </a>
                </div>
            {% endfor %}
        </div>
    {% endfor %}
{% endblock %}