{% extends 'base.html.twig' %}
{% block title %}List users{% endblock %}

{% block body %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    {% for message in app.flashes('danger') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}

    <h1>Users</h1>

    {% if users %}
        <table class="table">
            <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Email</th>
                <th scope="col">Username</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.username }}</td>
                    <td>
                        <a href="{{ path('users.show', {user: user.id}) }}" class="btn btn-success">Edit</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <div>
            Hmm, it doesn't seem like there are any users yet. You can create one below
        </div>
    {% endif %}

    <div>
        <a href="{{ path('users.create') }}" class="btn btn-primary">Create</a>
    </div>
{% endblock %}